---
import { Image } from "astro:assets"

import Facebook from "../../assets/facebook.svg"
import Linkedin from "../../assets/linkedin.svg"
import Logo from "../../assets/logo.svg"
import Twitter from "../../assets/twitter.svg"
import Section from "../sections/Section.astro"
import ShortForm from "../ui/ShortForm.astro"

const logos = [
    { name: "X", src: Twitter, link: "https://x.com/AvasDAO" },
    { name: "GitHub", src: Facebook, link: "https://github.com/avasdao" },
    { name: "Linkedin", src: Linkedin, link: "https://linkedin.com" },
]

const links = [
    { name: "About us", href: "#about" },
    { name: "Services", href: "#services" },
    { name: "Use Cases", href: "#cases" },
    { name: "Pricing", href: "#Testimonials" },
    { name: "Blog", href: "#Home" },
]
---

<Section id="contact" class="sm:px-5">
    <div class="w-full max-w-[1240px] mx-auto">
        <div class="px-[15px] bg-dark text-white py-[55px] lg:px-[60px] sm:rounded-t-[45px]">
            <div>
                <div class="flex flex-col lg:flex-row gap-7 items-center justify-between">
                    <picture>
                        <a href="#home">
                            <Image
                                src={Logo} alt="Logo for Ava's DAO"
                                class="w-32 h-32"
                            />
                        </a>
                    </picture>

                    <ul class="flex flex-col sm:flex-row gap-5">
                    {
                        links.map((link) => {
                            return (
                                <li class="text-center">
                                    <a class="underline" href={link.href}>
                                        {link.name}
                                    </a>
                                </li>
                            );
                        })
                    }
                    </ul>

                    <ul class="flex gap-5">
                    {
                        logos.map((logo) => {
                            return (
                                <li>
                                    <a href={logo.link} target="_blank">
                                        <picture>
                                            <Image src={logo.src} alt={logo.name} />
                                        </picture>
                                    </a>
                                </li>
                            );
                        })
                    }
                    </ul>
                </div>

                <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
                    <div class="flex text-center lg:text-start flex-col w-full lg:w-[30%]">
                        <h3 class="mb-5">Contact us:</h3>

                        <div class="flex flex-col justify-between gap-4">
                            <span>
                                Email:
                                support@avasdao.org
                            </span>

                            <span class="lg:w-3/4">
                                Address:
                                3455 Peachtree Rd NE
                                Suite #500
                                Atlanta, GA 30326
                            </span>
                        </div>
                    </div>

                    <div class="flex-grow my-10 lg:my-0 lg:ml-12">
                        <ShortForm />
                    </div>
                </div>
            </div>

            <div class="h-[1px] bg-white mb-5"></div>

            <div class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0">
                <span>
                    Copyright 2022-{new Date().getFullYear()}. Ava's DAO.
                </span>&nbsp

                <span>
                    All rights reserved.
                </span>
            </div>
        </div>
    </div>
</Section>
